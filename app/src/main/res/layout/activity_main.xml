<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView0"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Amount" />

    <EditText
        android:id="@+id/checkAmountValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:hint="00.00"
        android:inputType="numberDecimal"
        android:text="" />

    <TextView
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:text="Party Size" />

    <EditText
        android:id="@+id/partySizeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:hint="# People"
        android:inputType="number"
        android:text="" />

    <Button
        android:id="@+id/buttonCompute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:backgroundTint="@android:color/holo_orange_light"
        android:text="COMPUTE TIP"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="__________________ Tip __________________"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView15Percent"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="15%:"
        android:layout_gravity="left"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView20Percent"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-29dp"
        android:layout_marginRight="30sp"
        android:text="20%:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView25Percent"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-28dp"
        android:layout_marginRight="55sp"
        android:text="25%:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fifteenPercentTipValue"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="-25dp"
        android:hint="00.00"
        android:layout_marginLeft="50sp"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/twentyPercentTipValue"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="-29.5dp"
        android:hint="00.00"
        android:layout_marginLeft="176sp"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/twentyFivePercentTipValue"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="-28dp"
        android:hint="00.00"
        android:layout_marginLeft="307sp"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textViewTotalTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="_________________ Total _________________"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView15PercentTotal"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="15%:"
        android:layout_gravity="left"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView20PercentTotal"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-29dp"
        android:layout_marginRight="30sp"
        android:text="20%:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView25PercentTotal"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-28dp"
        android:layout_marginRight="55sp"
        android:text="25%:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fifteenPercentTotalValue"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="-25dp"
        android:hint="00.00"
        android:layout_marginLeft="50sp"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/twentyPercentTotalValue"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="-29.5dp"
        android:hint="00.00"
        android:layout_marginLeft="176sp"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/twentyFivePercentTotalValue"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="-28dp"
        android:hint="00.00"
        android:layout_marginLeft="307sp"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:text="" />

</LinearLayout>